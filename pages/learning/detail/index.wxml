<!--pages/learning/detail/index.wxml-->
<text>http://vjs.zencdn.net/v/oceans.mp4</text>

<view id="video-panel">
  <view id="video">
  <video id="study-video" src="http://172.20.144.113:8080/video2.mp4" controls="false" show-fullscreen-btn="false" show-center-play-btn="false" autoplay="false" bindtimeupdate="onVideoTimeUpdate"></video>
</view>

<view id="video-sub">
  <text>{{segments[currentSegmentIndex].speaker}} : {{segments[currentSegmentIndex].txt}}</text>
</view>

<view id="button-list">
  <button class="btn1" bindtap="streamNext">播放</button>
  <button class="btn2" catchtouchstart="streamRecord" catchtouchend="streamRecordEnd">尝试</button>
  <button class="btn3">重来</button>
</view>
</view>

<view id="result-panel">
  <view id="result-score">
    <text>80</text>
  </view>
  <view id="result-wave">
    <view class="wave" id="wave_parent">
      <canvas id="wave" type="2d" class="canvas"></canvas>
    </view>
  </view>
  <view id="result-suggestion">
    发音不够清晰
  </view>
</view>



<view id="records">
  <view class="record-item" wx:for="{{records}}" bindtap="streamAudioPlay" data-filePath="{{item.tempFilePath}}">
    <text>{{index}}</text>
    <text>{{item.tempFilePath}}</text>
    <text>{{item.duration}}ms</text>
  </view>
</view>
<view>第<text>{{currentIndex}}</text>题</view>

<view>题目：<text>{{questions[currentIndex%3].title}}</text></view>
<view id="content">{{questions[currentIndex%3].content}}</view>

<view id="options">
  <block wx:for="{{questions[currentIndex].options}}">
  <view data-option="{{index}}" bindtap="btn_choose" class="{{ choices[currentIndex] == index ? 'checked' : '' }}">选项{{index}} - {{item}}</view>
</block>
</view>

<view id="detail-choices">
  <view wx:for="{{choices}}" bindtap="btn_goto" data-index="{{index}}" class="{{ choices[index] >= 0 ? 'checked' : '' }}">
    {{index}}
  </view>
</view>

<view id="detail-bottom">
  <button bindtap="btn_last">上一题</button>
  <button bindtap="goToScore">{{currentIndex + 1}} / {{maxIndex}}</button>
  <button bindtap="btn_next" wx:if="{{currentIndex < maxIndex - 1}}">下一题</button>
  <button bindtap="btn_submit" wx:else>提交</button>
</view>
.app-info .app-logo {
	display: block;
	width: 64px;
	height: 64px;
	margin: 10px auto;
	border-radius: 4px;
}

.app-info .app-name {
	font-weight: bold;
	font-size: 18px;
	color: #000;
}

.alert {
	margin: 20px 0 30px;
}

.alert .alert-title {
	font-weight: 400;
	font-size: 16px;
	color: #000;
	margin-bottom: 10px;
}

.alert-desc {
	display: block;
    list-style: disc inside none;
}

.alert .alert-text {
	display: list-item;
    text-align: -webkit-match-parent;
	font-size: 14px;
	color: #999;
}

.logged {
	margin-top: 100px;
}

.logged .logged-icon {
	display: block;
	width: 64px;
	height: 64px;
	margin: 20px auto;
}

.logged .logged-text {
	font-size: 14px;
	color: #000;
	text-align: center;
	margin: 10px 0;
}
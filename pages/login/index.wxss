.login-container {
	height: 100%;
  background: #fff;
  position: relative;

}

.login-container>.bg, .login-container>.bg>image{
  width: 750rpx;
  height: 593rpx;
}

.login-container>.main{
  position: absolute;
  top: 0;
  width: 700rpx;
  margin: 0 25rpx;
}

.main>.logo{
  width: 300rpx;
  margin: 0 200rpx;
  margin-top: 200rpx;
}
.main>.logo>image{
  width: 300rpx;
  height: 300rpx;
}

.app-info {
	position: relative;
  margin-top: 10rpx;
	text-align: center;
}


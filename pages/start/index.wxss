.start {
	height: 100%;
	position: relative;
}

.start swiper {
	height: 100%;
}

.start image {
	width: 100%;
	height: 100%;
}

.start>.main{
	position: absolute;
	bottom: 60rpx;
}

.btn-group{
	display: flex;
	flex-direction: row;
	width: 550rpx;
	margin: 0 100rpx;
}

.btn-group>.btn-item{
	width: 50%;
}
.btn-group>.btn-item>button{
	width: 80%;
	background-color: firebrick;
	color: #ccc;
}

.btn-center{
	width: 550rpx;
	margin: 0 100rpx;
	padding-bottom: 100rpx;
}

.btn-center>button{
	width: 400rpx;
	background-color: #7f2615;
	color: #e6d4d0;
}

@keyframes down {
  from {
    transform: translateY(0%);
  }

  to {
    transform: translateY(100%);
  }
}

.down {
  display: block;
  animation: down 0.1s ease-in both;
}

@keyframes up {
  from {
		transform: translateY(50%);
		opacity: 0.0;
  }

  to {
		transform: translateY(0%);
		opacity: 1.0;

  }
}

.up {
  display: block;
  animation: up 0.5s ease-in both;
}